<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.UpgradeActivity">


    <View
        android:id="@+id/health"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"
        android:layout_toStartOf="@id/speed"
        android:background="@drawable/upgrade_background" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_above="@id/upgradeHealth"
        android:layout_toStartOf="@id/speed"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="95dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/hackbot"
        android:text="Upgrade health"
        android:textSize="15sp"/>
    <ProgressBar
        android:id="@+id/healthProgress"
        android:layout_width="100dp"
        android:layout_height="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@id/speedProgress"
        android:layout_centerHorizontal="true"
        android:min="3"
        android:max="15"
        android:progressTint="@color/orange"/>
    <Button
        android:id="@+id/upgradeHealth"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_below="@id/health"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:layout_toStartOf="@id/upgradeSpeed"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hackbot"
        android:drawableStart="@drawable/coin_logo"
        android:textAlignment="center"
        android:textSize="30sp" />


    <View
        android:id="@+id/speed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/upgrade_background" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_above="@id/upgradeSpeed"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/hackbot"
        android:text="Upgrade speed"
        android:textSize="15sp"/>
    <ProgressBar
        android:id="@+id/speedProgress"
        android:layout_width="100dp"
        android:layout_height="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:min="3"
        android:max="9"
        android:progressTint="@color/orange"/>
    <Button
        android:id="@+id/upgradeSpeed"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hackbot"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:textSize="30sp"
        android:layout_below="@id/speed"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/coin_logo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <View
        android:id="@+id/castSpeed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@id/speed"
        android:background="@drawable/upgrade_background" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_above="@id/upgradeCastSpeed"
        android:layout_toEndOf="@id/speed"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="95dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/hackbot"
        android:text="Upgrade cast speed"
        android:textSize="15sp"/>
    <ProgressBar
        android:id="@+id/castSpeedProgress"
        android:layout_width="100dp"
        android:layout_height="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@id/speedProgress"
        android:layout_centerHorizontal="true"
        android:min="1"
        android:max="5"
        android:progressTint="@color/orange"/>
    <Button
        android:id="@+id/upgradeCastSpeed"
        android:background="@drawable/button_background"
        android:fontFamily="@font/hackbot"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:textSize="30sp"
        android:layout_below="@id/health"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/coin_logo"
        android:layout_toEndOf="@id/upgradeSpeed"
        android:layout_marginStart="80dp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/upgradeBackButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/back_button"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true" />


    <View
        android:id="@+id/coinBackground"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:background="@drawable/counter_background" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/coin_logo"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/coins"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/hackbot"
        android:textColor="@color/black"
        android:textSize="22sp"/>

</RelativeLayout>